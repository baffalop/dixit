  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "dist",
    "lib": [ "es6" ]
  },
  "include": [
    "api/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src"
  ]
}
